#:kivy 1.0.9
<Label>
    color: 0,0,0,1
<LoginScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    usr: usr
    pswd: pswd
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: 'static/images/LOGO_FONDO.jpg'
                size: .5,.5
                pos: .5, .5

        BoxLayout:
            orientation: 'horizontal'
            usr: usr
            pos: .5,.5
            Label:

                text: 'Usuario'
            TextInput:
                id: usr
                multiline : False
        BoxLayout:
            pswd: pswd
            orientation: 'horizontal'
            Label:

                text: 'Contrase√±a'
            TextInput:
                id: pswd
                multiline : False
                password : True
        Button:
            text: 'Iniciar Sesion'
            on_press: root.on_press_button(self)
<ProductsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.current = 'login'
                root.manager.transition.direction = 'right'